<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEEF3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:paddingLeft="25px"
            android:text="请选择维保问题"
            android:textColor="@color/color999999"
            android:textSize="26px" />
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lly_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_white"
                android:paddingBottom="30px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="30px">

                <TextView
                    android:id="@+id/tv_hint1"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:text="处理人"
                    android:textColor="@color/color333333"
                    android:textSize="28px" />

                <com.wb.weibao.view.ClearEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_hint1"
                    android:layout_alignBaseline="@+id/tv_hint1"
                    android:background="@color/colorWhite"
                    android:hint="请填写处理人姓名"
                    android:textColor="@color/color333333"
                    android:textSize="28px" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/tv_hint1"
                    android:layout_marginBottom="30px"
                    android:layout_marginTop="30px"
                    android:background="@color/colorLine" />

                <TextView
                    android:id="@+id/tv_hint2"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line"
                    android:text="最终金额"
                    android:textColor="@color/color333333"
                    android:textSize="28px" />

                <com.wb.weibao.view.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line"
                    android:layout_toRightOf="@+id/tv_hint2"
                    android:layout_alignBaseline="@+id/tv_hint2"
                    android:background="@color/colorWhite"
                    android:hint="请填写负责人电话号码"
                    android:textColor="@color/color333333"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoRelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:gravity="center_vertical"
                android:paddingLeft="25px"
                android:text="请填写处理结果"
                android:textColor="@color/color999999"
                android:textSize="26px" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                android:background="@drawable/shape_white"
                android:gravity="left"
                android:hint="请填写处理结果"
                android:minHeight="400px"
                android:paddingLeft="5px"
                android:paddingRight="5px"
                android:paddingTop="10px"
                android:textColor="@color/color333333"
                android:textSize="26px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/aly"
                android:layout_marginTop="120px"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:background="#EFEEF3"
                android:orientation="horizontal">
                <Button
                    android:background="@drawable/shape_red_theme"
                    android:id="@+id/affirm1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_height="70px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:text="失败"
                    android:layout_width="0px" />
                <Button
                    android:background="@drawable/shape_common_theme"
                    android:id="@+id/tv_submit"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:textColor="@color/white"
                    android:layout_height="70px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:text="成功"
                    />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
</layout>
