<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:gravity="center"
        android:orientation="vertical">

       <ImageView
           android:layout_gravity="center_horizontal"
           android:background="@mipmap/ic_logo"
           android:layout_width="100dp"
           android:layout_height="100dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/linearlayout"
            android:orientation="vertical">
        <!--账号-->
        <LinearLayout
            style="@style/login_field"
            android:layout_width="match_parent">

            <ImageView
                style="@style/login_field.account"
                android:background="@mipmap/zhanghao" />

            <com.wb.weibao.view.ClearEditText
                android:id="@+id/input_phone"
                style="@style/login_field.value"
                android:paddingRight="8dp"
                android:hint="请输入账号"
                android:textColor="#323232"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/loginname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/login_phone"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="15dp" />
            <ImageView
                android:id="@+id/LoginSeleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginRight="18dp"

                android:contentDescription="@string/app_name"
                android:src="@drawable/login_more_up" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dddddd" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/LoginRecyclerView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="@color/white"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>
        <!--密码-->
        <LinearLayout
            style="@style/login_field"
            android:layout_width="match_parent">

            <ImageView
                style="@style/login_field.account"
                android:background="@mipmap/mima" />

            <com.wb.weibao.view.ClearEditText
                android:id="@+id/input_password"
                style="@style/login_field.value"
                android:paddingRight="8dp"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/pwdeye"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@mipmap/ic_eye1"
                />
        </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:visibility="gone"
            android:layout_marginTop="10px"
            android:layout_marginLeft="24px"
            android:layout_gravity="left"
            android:id="@+id/RememberPasswordCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textSize="14sp"
            android:textColor="@color/colorD0D0D0"
            android:text="记住密码"/>
        <TextView
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="24dp"
            android:text="忘记密码?"
            android:textColor="#323232"
            android:textSize="13sp" />
        <Button
            android:enabled="false"
            android:id="@+id/affirm"
            style="@style/SmsButton"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="63dp"
            android:text="确认"
            />
        <TextView
            android:id="@+id/lainxi"
            android:drawablePadding="8px"
            android:layout_marginTop="100px"
           android:drawableRight="@drawable/ic_login_left"
            android:textColor="@color/colorF15453"
            android:text="联系我们"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>
