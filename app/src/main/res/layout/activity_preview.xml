<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lly_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/lly_head"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorDefault"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lly_left"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/id_leftBtnImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_back_icon" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_left_txt"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/lly_left"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/ic_view_jiantou"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />
        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@android:color/black"
    android:layout_weight="1">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:background="@android:color/black">
            <TextureView
                android:id="@+id/texture_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
            <TextView
                android:id="@+id/result_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/start"
                android:visibility="visible"
                android:layout_gravity="center"
                android:background="@drawable/ic_view_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    <TextView
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/time"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_white"
        android:padding="8dp"
        android:text=""
        android:textColor="@color/color333333"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:text=""
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:gravity="center"
        android:id="@+id/camera_time"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/black"
        android:text=""
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/capture_button"
               android:background="@drawable/ic_view_photo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/record_button"
                android:layout_marginLeft="40dp"
                android:background="@drawable/ic_view_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</layout>


