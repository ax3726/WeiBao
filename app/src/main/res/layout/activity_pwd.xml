<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="50dp"
    android:background="@drawable/linearlayout"
    android:orientation="vertical">
    <!--账号-->
    <LinearLayout
        style="@style/login_field"
        android:layout_width="match_parent">

        <TextView style="@style/login_field.account2" android:textColor="#323232" android:text="原始密码"/>

        <com.wb.weibao.view.ClearEditText
            android:id="@+id/input_pwd"
            style="@style/login_field.value"
            android:inputType="textPassword"
            android:paddingRight="8dp"
            android:hint="请输入原始密码"
            android:textColor="#323232"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dddddd" />
    <!--密码-->
    <LinearLayout
        style="@style/login_field"
        android:layout_width="match_parent">
        <TextView style="@style/login_field.account2" android:textColor="#323232" android:text="新的密码"/>
        <com.wb.weibao.view.ClearEditText
            android:id="@+id/input_newpwd"
            style="@style/login_field.value"
            android:paddingRight="8dp"
            android:hint="请输入新的密码"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dddddd" />
    <!--密码-->
    <LinearLayout
        style="@style/login_field"
        android:layout_width="match_parent">
        <TextView style="@style/login_field.account2" android:textColor="#323232" android:text=""/>
        <com.wb.weibao.view.ClearEditText
            android:id="@+id/input_newpwd2"
            style="@style/login_field.value"
            android:paddingRight="8dp"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>

        <Button
            android:enabled="false"
            android:id="@+id/affirm"
            style="@style/SmsButton"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="63dp"
            android:text="确认"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>