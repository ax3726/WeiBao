<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTheme"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38px"

                    android:drawableLeft="@mipmap/home_location_icon"
                    android:drawablePadding="20px"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#23363A"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/tv_add_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/shape_btn_white"
                    android:paddingBottom="8px"
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:paddingTop="8px"
                    android:text="新增订单"
                    android:textColor="@color/colorWhite"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginBottom="50px"
                android:layout_marginTop="48px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28px"
                    android:layout_weight="1"
                    android:background="@drawable/shape_home_search_bg"
                    android:gravity="center"
                    android:hint="请输入维保内容进行搜索"
                    android:textColor="@color/color333333"
                    android:textSize="28px"

                    />

                <ImageView
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/home_search_icon" />

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/srl_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>


        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</layout>