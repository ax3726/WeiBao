<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:background="#F3F3F3"
        android:id="@+id/lly_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:background="@color/colorTheme"
            android:gravity="center"
            android:orientation="vertical">
              <ImageView
                  android:id="@+id/name"
                 android:background="@drawable/touxiang"
                  android:textSize="20sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
            <TextView

                android:layout_marginTop="10dp"
                android:id="@+id/tv_phone"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/pwd"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:drawableLeft="@drawable/mima"
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="密码设置"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="1px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:drawableLeft="@drawable/danwei"
                android:id="@+id/tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="所属单位"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_weizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 />

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="1px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:id="@+id/tv_huancun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="清楚缓存"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:drawableLeft="@drawable/dianhua"
                android:id="@+id/tv_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="联系我们"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <TextView
                android:text="0571-56260119"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginTop="1px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:drawableLeft="@drawable/jianyi"
                android:id="@+id/tv_jianyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="提建议"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:drawableLeft="@drawable/kaiguan"
                android:id="@+id/tv_kaiguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="预警声音开关"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/colorWhite"
            android:paddingLeft="15px"
            android:paddingRight="20px">

            <TextView
                android:drawableLeft="@drawable/banben"
                android:id="@+id/tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawablePadding="8px"
                android:gravity="center"
                android:text="版本信息"
                android:textColor="@color/color4a4a4a"
                android:textSize="14sp" />

            <TextView
                android:text="当前版本1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 />

        </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            />

        <Button
            android:enabled="true"
            android:id="@+id/btn_tui"
            style="@style/SmsButton"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"

            android:layout_marginBottom="40px"
            android:text="退出登陆"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</layout>