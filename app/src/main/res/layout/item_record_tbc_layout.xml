<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20px"
            android:id="@+id/tv_projectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="48px"
            android:layout_marginBottom="20px"
            android:textColor="@color/color333333"
            android:textSize="28px" />
       <View
           android:layout_marginLeft="28px"
           android:layout_marginRight="28px"
           android:layerType="software"
           android:background="@drawable/line_view"
           android:layout_width="match_parent"
           android:layout_height="2dp"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20px"
            android:paddingLeft="28px"
            android:paddingRight="28px"
            android:paddingTop="20px">

            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文二路196号"
                android:textColor="@color/color333333"
                android:textSize="28px" />
            <TextView
                android:id="@+id/tv_dianwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:text="11" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="20px"
                android:text=""
                android:textColor="@color/color333333"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_right"
                android:text="2018.08.31"
                android:textColor="@color/color333333"
                android:textSize="28px" />

            <TextView
                android:layout_marginTop="20px"
                android:id="@+id/tv_error"
                android:layout_below="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_right"
                android:text="火警"
                android:textColor="@color/color333333"
                android:textSize="28px" />




            <ImageView
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:src="@mipmap/home_right_icon" />

        </com.zhy.autolayout.AutoRelativeLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/affirm"
            style="@style/SmsButton_small"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:text="确认收到通知" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

    </com.zhy.autolayout.AutoLinearLayout>
</layout>