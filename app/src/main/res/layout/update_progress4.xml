<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="53px"
    android:layout_marginRight="52px"
    android:layout_width="wrap_content"
    android:layout_height="534px"
    android:layout_gravity="center_horizontal"
    android:background="#F1f1f1"
    >
<ImageView
    android:layout_marginTop="-30px"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/icon_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="332px">
    <TextView
        android:textColor="@color/color333333"
        android:layout_marginTop="50px"
        android:textSize="36px"
        android:gravity="center"
        android:text="允许访问你的“位置”"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px"
        android:textColor="@color/color333333"
        android:layout_marginTop="22px"
        android:layout_gravity="center"
        android:textSize="28px"
        android:gravity="center"
        android:text="消防巡查需要获取您的定位，否则无法进行巡查"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  <View
     android:layout_weight="1"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="0dp"/>
    <TextView
        android:background="@color/white"
        android:layout_marginTop="48px"
        android:id="@+id/update_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:textSize="30px"
        android:textColor="#3c5cd3"
        android:text="确定" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>