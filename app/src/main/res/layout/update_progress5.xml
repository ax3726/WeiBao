<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="53px"
    android:layout_marginRight="52px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/icon_dialog4"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="362px">
    <TextView
        android:layout_gravity="top"
        android:textStyle="bold"
        android:textColor="@color/color333333"
        android:textSize="36px"
        android:gravity="center"
        android:text="温馨提示"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px"
        android:textColor="@color/color333333"
        android:layout_marginTop="32px"
        android:layout_gravity="center"
        android:textSize="28px"
        android:gravity="center"
        android:text="如果巡查点有贴巡查二维码，扫一扫巡查点的二维码进行巡查，若二维码缺失可手动点击按钮巡查完成（巡查结束会生成巡查轨迹)。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
  <View
     android:layout_weight="1"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="0dp"/>
    <TextView
        android:background="@drawable/action_button_normal_bg5"
        android:layout_marginTop="48px"
        android:id="@+id/update_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="bottom|center"
        android:textSize="30px"
        android:textColor="@color/white"
        android:text="我知道了" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>