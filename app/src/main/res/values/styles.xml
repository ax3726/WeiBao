<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@drawable/welcome_icon</item>-->
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14dp</item>
    </style>


    //登录页面

    <style name="login_field">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">47dp</item>
    </style>

    <style name="login_field2">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="login_field.account">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="login_field.account2">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="login_field.value">
        <item name="android:layout_width">0dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    //按钮样式

    <style name="SmsButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/btn_textcolor</item>
        <item name="android:background">@drawable/test_button_selector</item>
    </style>

</resources>
